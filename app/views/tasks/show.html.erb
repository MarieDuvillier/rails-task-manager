<div class="container">
<h1><%= @task.title %></h1>
<div class="details">
  <p><%= @task.details %></p>
</div>
 <% if @task.completed %>
      <i class="fa fa-check-square-o" aria-hidden='true'></i>This task is completed
    <% else %>
     <i class="fa fa-square-o" aria-hidden='true'></i>This class is not completed yet
    <% end %>
<br>
<br>
<%= link_to "Back to list", tasks_path %>
<br>
<%= link_to "Edit task", edit_task_path %>
</div>
